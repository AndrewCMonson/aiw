{
    "name": "@amdev/aiw",
    "version": "0.1.0",
    "description": "Repo-local prompt library CLI for Cursor workflows",
    "license": "MIT",
    "type": "module",
    "bin": {
        "aiw": "dist/cli.js"
    },
    "files": [
        "dist"
    ],
    "engines": {
        "node": ">=20"
    },
    "scripts": {
        "build": "tsc -p tsconfig.json",
        "postbuild": "node scripts/postbuild.mjs",
        "test": "vitest run",
        "dev": "npm run build && node dist/cli.js",
        "link": "npm unlink -g @amdev/aiw 2>/dev/null || true && npm link --force",
        "unlink": "npm unlink -g @amdev/aiw",
        "format": "prettier --write \"src/**/*.{ts,tsx}\"",
        "lint": "eslint --ext .ts,.tsx src/",
        "lint:fix": "eslint --ext .ts,.tsx src/ --fix",
        "prepare": "husky"
    },
    "keywords": [],
    "author": "",
    "private": false,
    "dependencies": {
        "commander": "^14.0.2"
    },
    "devDependencies": {
        "@eslint/compat": "^1.4.1",
        "@eslint/eslintrc": "^3.3.3",
        "@eslint/js": "^9.39.2",
        "@types/node": "^25.0.8",
        "@typescript-eslint/eslint-plugin": "^8.53.0",
        "@typescript-eslint/parser": "^8.53.0",
        "eslint": "^9.39.2",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-import": "^2.32.0",
        "eslint-plugin-jsdoc": "^61.7.1",
        "eslint-plugin-notice": "^1.0.0",
        "eslint-plugin-prettier": "^5.5.4",
        "globals": "^17.0.0",
        "husky": "^9.1.7",
        "lint-staged": "^16.2.7",
        "prettier": "^3.7.4",
        "typescript": "^5.9.3",
        "vitest": "^3.2.4"
    }
}
